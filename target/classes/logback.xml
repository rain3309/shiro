<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>
  <logger name="com.rain.shiro.domain" level="DEBUG"/>
  <logger name="com.rain.shiro.core" level="INFO"/>
  <logger name="com.rain.shiro.common" level="INFO"/>
  <logger name="com.rain.shiro.busniess" level="INFO"/>
  <logger name="com.rain.shiro.snaker" level="INFO"/>
  <logger name="org.hibernate" level="INFO"/>
  <logger name="org.springframework" level="INFO"/>
  <!-- 
  <logger name="jdbc" level="DEBUG"/>
  <logger name="jdbc.sqltiming" level="DEBUG"/>
  <logger name="jdbc.sqlonly" level="DEBUG"/>
   -->
  <root level="INFO"><appender-ref ref="STDOUT"/></root>
</configuration>